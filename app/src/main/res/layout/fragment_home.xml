<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_background"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:padding="24dp">

        <TextView
            android:id="@+id/vpnTVHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="#7C352053"
            android:padding="8dp"
            android:text="Hello, welcome to heads up. Start Learning."
            android:textColor="#ffffff"
            android:textSize="24sp" />
        <FrameLayout
            android:id="@+id/buttonFrameLayout"
            android:layout_width="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vpnTVHome"
            android:layout_centerHorizontal="true"
            tools:ignore="MissingConstraints"
            android:background="@drawable/button_bg_thick"
            android:backgroundTint="@color/colorPrimary">

            <Button
                android:id="@+id/startNowButton"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Let's start"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="normal"
                />
        </FrameLayout>




    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>