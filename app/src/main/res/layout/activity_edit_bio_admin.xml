<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPanelActivities.WithdrawRequestAdminPanelActivity$EditBioAdminActivity">
    <LinearLayout
        android:background="@drawable/ic_admin_background"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Details:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/homeTextAdminET"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_hollow"
            android:focusableInTouchMode="true"
            android:hint="Enter New Home Text"
            android:inputType="textMultiLine"
            android:padding="10dp" />
        <EditText
            android:id="@+id/pointsPerQuizAdminET"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_hollow"
            android:focusableInTouchMode="true"
            android:hint="Points Per Quiz"
            android:inputType="number"
            android:padding="10dp" />
        <EditText
            android:id="@+id/pointsPerAdAdminET"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_hollow"
            android:focusableInTouchMode="true"
            android:hint="Points Per Ad"
            android:inputType="number"
            android:padding="10dp" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_thick"
            android:backgroundTint="@color/color_success"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/updateHomeTextButton"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Update"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>